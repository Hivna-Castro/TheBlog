<h1>Criar Novo Post</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "erro") %> proibiram este post de ser salvo:</h2>

      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

   <div class="field">
    <%= form.label :tags, "Tags (separadas por vÃ­rgula)" %>
    <%= text_field_tag :tags, @post.tags.map(&:name).join(', '), class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Criar Post" %>
  </div>
<% end %>

<%= link_to 'Voltar', posts_path %>
