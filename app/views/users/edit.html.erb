<%= form_with model: @user,  class: "post-form", local: true do |form| %>
  <div class="flex flex-col gap-half mt-4 text-center">
    <h3 class="text-2xl font-semibold leading-none"> <%= t('application.users.edit_profile.title') %>  </h3>
  </div>

  <div class="flex flex-col gap mb-4">
    <div class="flex flex-col gap-half">
      <%= form.label :name, I18n.t('application.users.edit_profile.name'), class: "text-sm font-medium leading-none" %>
      <%= form.text_field :name, value: @user.name, required: true, class: "input" %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :email, I18n.t('application.users.edit_profile.email'), class: "text-sm font-medium leading-none" %>
      <%= form.email_field :email, value: @user.email, required: true, class: "input" %>
    </div>
  </div>

  <div class="flex flex-col gap-half">
    <h4 class="text-1xl font-semibold leading-none"> <%= t('application.users.edit_profile.change_password') %>  </h4>
  </div>

  <div class="flex flex-col gap mb-2">
    <div class="flex flex-col gap-half">
      <%= form.label :current_password, I18n.t('application.users.edit_profile.current_password'), class: "text-sm font-medium leading-none" %>
      <%= form.password_field :current_password, class: "input" %>
    </div>
    <div class="flex flex-col gap-half">
      <%= form.label :password, I18n.t('application.users.edit_profile.new_password'), class: "text-sm font-medium leading-none" %>
      <%= form.password_field :password, class: "input" %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :password_confirmation, I18n.t('application.users.edit_profile.confirm_new_password'), class: "text-sm font-medium leading-none" %>
      <%= form.password_field :password_confirmation, class: "input" %>
    </div>
  </div>

  <div class="flex items-center mb-2">
    <%= form.submit I18n.t('application.users.edit_profile.submit'), class: "btn btn--primary i-full" %>
  </div>
  <div class="flex items-center">
    <%= link_to I18n.t('application.users.edit_profile.back'), posts_path, class: "btn btn--negative  i-full" %>
  </div>
<% end %>

