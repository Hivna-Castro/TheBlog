
<%= form_with url: forgot_password_users_path, method: :post, local: true do |form| %>
  <div class="flex flex-col gap-half">
    <h3 class="text-2xl font-semibold leading-none"> <%= t('application.users.forgot_password.title') %> </h3>
    <p class="text-sm text-subtle"> <%=t('application.users.forgot_password.instructions')%> </p>
    <p class="text-sm text-subtle"> <%=t('application.users.forgot_password.send_link')%> </p>
  </div>

  <div class="flex flex-col gap mb-6">
    <div class="flex flex-col gap-half">
      <%= form.label :email, I18n.t('application.users.forgot_password.email'), class: "text-sm font-medium leading-none" %>
      <%= form.email_field :email, placeholder: I18n.t('application.users.forgot_password.email_placeholder'), required: true, class: "input"  %>
    </div>
  </div>

  <div class="flex items-center mb-2">
    <%= form.submit I18n.t('application.users.forgot_password.submit'), class: "btn btn-primary", class: "btn btn--primary i-full" %>
  </div>
  <div class="flex items-center">
    <%= link_to I18n.t('application.users.forgot_password.back'), posts_path, class: "btn btn--negative  i-full" %>
  </div>
<% end %>
