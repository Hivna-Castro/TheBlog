<%= form_with url: reset_password_users_path, method: :patch, local: true do |form| %>
  <%= hidden_field_tag :token, @token %>
  <div class="flex flex-col gap-half">
    <h3 class="text-2xl font-semibold leading-none"> <%= t('application.users.reset_password.title')%>  </h3>
    <p class="text-sm text-subtle"> <%=t('application.users.reset_password.instruction') %> </p>
  </div>

  <div class="flex flex-col gap mb-2">
    <div class="flex flex-col gap-half">
      <%= form.label :password, I18n.t('application.users.reset_password.new_password'), class: "text-sm font-medium leading-none" %>
      <%= form.password_field :password, required: true, class: "input"  %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :password_confirmation, I18n.t('application.users.reset_password.confirm_password'), class: "text-sm font-medium leading-none" %>
      <%= form.password_field :password_confirmation, required: true, class: "input"  %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.submit I18n.t('application.users.reset_password.submit'), class: "btn btn--primary i-full" %>
  </div>
<% end %>
