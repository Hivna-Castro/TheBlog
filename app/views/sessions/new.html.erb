<h1>Login</h1>
<%= form_with url: login_path, method: :post do |form| %>
  <% if flash[:alert] %>
    <div>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>

  <p>
    <%= link_to 'Esqueceu sua senha?', forgot_password_form_users_path %>
  </p>

  <p >
    Ainda n√£o possui uma conta? 
    <%= link_to 'Cadastre-se', signup_path %>
  </p>
  <p>
    <%= link_to 'Home', posts_path %>
  </p>
<% end %>