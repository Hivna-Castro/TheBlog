<h1><%= I18n.t('application.sessions.login.title') %></h1>
<%= form_with url: login_path, method: :post do |form| %>
  <% if flash[:alert] %>
    <div>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div>
    <%= form.label :email, I18n.t('application.sessions.create.email') %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password, I18n.t('application.sessions.create.password') %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit I18n.t('application.sessions.create.submit') %>
  </div>

  <p>
    <%= link_to I18n.t('application.sessions.create.forgot_password'), forgot_password_form_users_path %>
  </p>

  <p>
    <%= I18n.t('application.sessions.create.no_account') %>
    <%= link_to I18n.t('application.sessions.create.signup'), signup_path %>
  </p>

  <p>
    <%= link_to I18n.t('application.sessions.create.home'), posts_path %>
  </p>
<% end %>
