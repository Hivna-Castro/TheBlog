
  <%= form_with url: login_path, class: "card flex flex-col gap",  method: :post do |form| %>
    <div class="flex flex-col gap-half text-center"">
      <h3 class="text-2xl font-semibold leading-none"> <%= t('application.sessions.login.title')%> </h3>
      <p class="text-sm text-subtle"><%= t('application.sessions.login.subtitle')%></p>
    </div>

    <div class="flex flex-col gap mb-2" >
      <div class="flex flex-col gap-half" >
        <%= form.label :email, I18n.t('application.sessions.create.email'), class: "text-sm font-medium leading-none" %>
        <%= form.text_field :email, placeholder: I18n.t('application.users.create.email_placeholder'), class: "input" %>
      </div>

      <div class="flex flex-col gap-half" >
        <%= form.label :password, I18n.t('application.sessions.create.password'), class: "text-sm font-medium leading-none" %>
        <%= form.password_field :password,  placeholder: I18n.t('application.users.create.password_placeholder'), class: "input" %>
      </div>
    </div>

    <div class="flex items-center">
      <%= form.submit I18n.t('application.sessions.create.submit'), class: "btn btn--primary i-full" %>
    </div>

    <p class="text-sm text-subtle text-center" >
      <%= link_to I18n.t('application.sessions.create.forgot_password'), forgot_password_form_users_path %>
    </p>

    <p class="text-sm text-subtle text-center">
      <%= I18n.t('application.sessions.create.no_account') %>
      <%= link_to I18n.t('application.sessions.create.signup'), signup_path %>
    </p>

  <% end %>

