<h1>Tags</h1>

<div class="create-tag">
  <h2>Criar Tag</h2>
  <%= form_with model: @tag, url: tags_path, local: true do |form| %>
    <div>
      <%= form.label :name, 'Nome da Tag' %>
      <%= form.text_field :name, placeholder: 'Digite o nome da tag', required: true %>
    </div>
    <div>
      <%= form.submit 'Criar', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<div class="existing-tags">
  <h2>Tags Existentes</h2>
  <ul>
    <% @tags.each do |tag| %>
      <li>
        <%= tag.name %>
        <%= button_to 'Excluir', tag_path(tag), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to t('application.posts.back'), posts_path %>