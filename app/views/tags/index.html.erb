<h1><%= t('application.tags.create') %></h1>

<div class="create-tag">
  <h2><%= t('application.tags.create') %></h2>
  <%= form_with(model: @tag, local: true, html: { multipart: true }) do |form| %>
    <div>
      <%= form.label :name, t('application.tags.name.label') %>
      <%= form.text_field :name, placeholder: t('application.tags.name.placeholder') %>
    </div>
    <div >
      <%= form.label :file, t('application.tags.upload_file') %>
      <%= form.file_field :file %>
    </div>
    <div>
      <%= form.submit t('application.tags.create'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<div class="existing-tags">
  <h2><%= t('application.tags.existing') %></h2>
  <ul>
    <% @tags.each do |tag| %>
      <li>
        <%= tag.name %>
        <%= button_to t('application.tags.delete'), tag_path(tag), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
      </li>
    <% end %>
  </ul>
</div>

